<Page
    x:Class="BudggyUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BudggyUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <!-- need to add a resource library for textboxs, stackpanels, etc.-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Name="topBarRP" Width="Auto">
            
            <Button Name="menuButton" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE700;" FontSize="36"
                    Height="50" RelativePanel.AlignLeftWithPanel="True" 
                    Click="MenuButton_Click"/>
            
            <Button Name = "backButton" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE0A6;" FontSize="36"
                    Height="50" RelativePanel.RightOf="menuButton" 
                    Visibility="Collapsed"/>

            <TextBlock Name="TitleTB" Text="Budggy" FontSize="36"
                       FontWeight="Bold" Margin="20,0,0,0"
                       RelativePanel.RightOf="backButton"/>

            <TextBox Name="searchTextBox" FontSize="24" PlaceholderText="Search"
                    Background="LightGray"  Height="50" Width="200" 
                     RelativePanel.LeftOf="searchBT" />

            <Button Name="searchBT" Height="50" FontSize="36" FontFamily="Segoe MDL2 Assets"
                    Content="&#xE1A3;" RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>
        
        <SplitView 
            Name="budggySV"
            Grid.Row="1"
            OpenPaneLength="230"
            DisplayMode="CompactInline"
            CompactPaneLength="56">

            <SplitView.Pane>
                <ListBox Name="budggyLB"
                         SelectionMode="Single"
                         SelectionChanged="BudggyLB_SelectionChanged">
                    <ListBoxItem Name="BuggyHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="BuggyHomeTB"
                                       FontFamily="Segoe MDL2 Assets" 
                                       Text="&#xE80F;"
                                       FontSize="36"
                                       />
                            <TextBlock Name="BuggyHomeNTB"
                                       FontFamily=" New Times Roman"
                                       Text="Home"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Name="BinsHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="BinsTB"
                                       FontFamily="Segoe MDL2 Assets" 
                                       Text="&#xE825;"
                                       FontSize="36"
                                       />
                            <TextBlock Name="BinsNTB"
                                       FontFamily=" New Times Roman"
                                       Text="Bins"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Name="TransferHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="TransferTB"
                                       FontFamily="Segoe MDL2 Assets" 
                                       Text="&#xE8AB;"
                                       FontSize="36"
                                       />
                            <TextBlock Name="TransferNTB"
                                       FontFamily=" New Times Roman"
                                       Text="Transfer"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Name="StatisticsHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="StatisticsTB"
                                       FontFamily="Segoe MDL2 Assets" 
                                       Text="&#xE8F1;"
                                       FontSize="36"
                                       />
                            <TextBlock Name="StatisticsNTB"
                                       FontFamily=" New Times Roman"
                                       Text="Statistics"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Name="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="SettingsTB"
                                       FontFamily="Segoe MDL2 Assets" 
                                       Text="&#xE713;"
                                       FontSize="36"
                                       />
                            <TextBlock Name="SettingsNTB"
                                       FontFamily=" New Times Roman"
                                       Text="Settings"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                        </ListBoxItem>

                </ListBox>
            </SplitView.Pane>

            <SplitView.Content>
                <Frame Name="contentFrame"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
