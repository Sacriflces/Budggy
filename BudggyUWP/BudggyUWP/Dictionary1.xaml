<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BudggyUWP">
    <Style TargetType="Button" x:Key="MyMenuButtonStyle">
        <Setter Property="Height" Value="50"/>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="MyTextBlockStyle">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="Margin" Value="20,0,0,0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Segoe Ui"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="MyMenuTextBlockStyle">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        
    </Style>

    <Style TargetType="TextBlock" x:Key="MyBinsHomeTextBlockStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBox" x:Key="MyBinsHomeTextBoxStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="20,0,0,20"/>
    </Style>
</ResourceDictionary>
