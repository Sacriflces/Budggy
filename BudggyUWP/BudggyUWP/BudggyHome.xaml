<Page
    x:Class="BudggyUWP.BudggyHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BudggyUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Name="BudggyHomeTBlock" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style x:Name="BudggyHomeTBox" TargetType="TextBox">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>        
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <!--<ColumnDefinition Width="2*"/> -->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <RelativePanel Grid.Row="1" Grid.ColumnSpan="3">
            <StackPanel Grid.Row="1" Grid.ColumnSpan="3"                        
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        Orientation="Horizontal">
                <ToggleSwitch Name="SplitTSW" Header="Split Income" IsOn="True"/>
                <ComboBox x:Name="BinsCB" Width="200"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0" 
                          >                    
                    <ComboBox.ItemTemplate>
                        <DataTemplate  >
                            <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                          
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>               
                <ComboBox x:Name="IncExpCB" Width="100"
                          SelectedIndex="0" 
                          VerticalAlignment="Center"
                          SelectionChanged="IncExpCB_SelectionChanged">
                    <ComboBoxItem Content="Income"/>
                    <ComboBoxItem Content="Expense"/>
                </ComboBox>
                <TextBox PlaceholderText="Description"
                         Style="{StaticResource BudggyHomeTBox}"
                         Name="DescriptionTB" Width="300"
                         />
                <TextBox Name="ValueTB" PlaceholderText="Value"   
                         Style="{StaticResource BudggyHomeTBox}"
                         KeyDown="ValueTB_KeyDown"
                         KeyUp="ValueTB_KeyUp"       
                         
                         Width="100" Margin="20,0,0,0"/>
                <CalendarDatePicker Name="HomeCDP"
                                    IsTodayHighlighted="True"                                    
                                    Margin="20,0,0,0"/>
                <Button Name="AddButton" Content="Add" 
                        Margin="20,0,0,0"                       
                        Click="AddButton_Click"/>

            </StackPanel>            
        </RelativePanel>
        <Border Grid.Row="2"
                BorderBrush="White"
                BorderThickness="2"
                Padding="20,15,20,15"
                Background="AliceBlue"
                CornerRadius="5">
            
        
        <ListBox Name="IncLB" Grid.Row="2" 
                 ScrollViewer.HorizontalScrollMode="Enabled"
                 ScrollViewer.HorizontalScrollBarVisibility="Visible"
                 ScrollViewer.IsHorizontalRailEnabled="True"
                  >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    
                        <RelativePanel Width="450" >
                        <!-- use a relative panel to have the delete button always on the right!-->
                        <Ellipse Name="IncEllipse" Fill="Green" Width="25" Height="25"
                                 Margin="0,10,0,0"
                                 RelativePanel.AlignLeftWithPanel="True"
                                    
                                 />                       
                        <TextBlock Name="LBIncValTB" Margin="20,10,0,0" Text="{Binding ValueStr, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource BudggyHomeTBlock}"
                                   RelativePanel.RightOf="IncEllipse"            
                                   
                                   />
                        <StackPanel Name="IncBinSP" Margin="20,0,20,0" RelativePanel.RightOf="LBIncValTB"
                                    
                                    >
                            <TextBlock Text="Bin:"/>
                            <TextBlock Text="{Binding Bin, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <TextBlock Name="IncDateTB" Style="{StaticResource BudggyHomeTBlock}"
                                   Margin="0,10,0,0"
                                   Text="{Binding DateStr, UpdateSourceTrigger=PropertyChanged}"
                                   RelativePanel.RightOf="IncBinSP"
                                   />
                        <TextBlock Margin="20,20,20,0" Style="{StaticResource BudggyHomeTBlock}" 
                            Text="{Binding Description,UpdateSourceTrigger=PropertyChanged}"
                                   TextWrapping="WrapWholeWords"
                                   MaxWidth="400"
                                   RelativePanel.Below="IncBinSP"
                                   RelativePanel.AlignHorizontalCenterWith="IncBinSP"/>
                            <Button Name="IncDeleteBt" Click="IncDeleteBt_Click"
                                    FontFamily="Segoe MDL2 Assets" Content="&#xE738;"
                                    RelativePanel.AlignRightWithPanel="True"
                                    RelativePanel.AlignVerticalCenterWithPanel="True"/>

                        </RelativePanel>
                   
                    </DataTemplate>
            </ListBox.ItemTemplate>
                <Grid/>
            </ListBox>
        </Border>

        <Border Grid.Row="2"
                Grid.Column="1"
                BorderBrush="White"
                BorderThickness="2"
                Padding="20,15,20,15"
                Background="AliceBlue"
                CornerRadius="5">

            <ListBox Name="ExpLB" Grid.Row="2" Grid.Column="1"
                 ScrollViewer.HorizontalScrollMode="Enabled"
                 ScrollViewer.HorizontalScrollBarVisibility="Visible"
                 ScrollViewer.IsHorizontalRailEnabled="True">
            <ListBox.ItemTemplate>
                <DataTemplate>
                        <RelativePanel Width="450" >
                                                       
                            <!-- use a relative panel to have the delete button always on the right!-->
                            <Ellipse Name="ExpEllipse" Fill="Red" Width="25" Height="25"
                                 Margin="0,10,0,0"
                                 RelativePanel.AlignLeftWithPanel="True"
                                    
                                 />
                            <TextBlock Name="LBExpValTB" Margin="20,10,0,0" Text="{Binding ValueStr, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource BudggyHomeTBlock}"
                                   RelativePanel.RightOf="ExpEllipse"            
                                   
                                   />
                            <StackPanel Name="ExpBinSP" Margin="20,0,20,0" RelativePanel.RightOf="LBExpValTB"
                                    
                                    >
                                <TextBlock Text="Bin:"/>
                                <TextBlock Text="{Binding Bin, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <TextBlock Name="ExpDateTB" Style="{StaticResource BudggyHomeTBlock}"
                                   Margin="0,10,0,0"
                                   Text="{Binding DateStr, UpdateSourceTrigger=PropertyChanged}"
                                   RelativePanel.RightOf="ExpBinSP"
                                   />
                            
                            <TextBlock Margin="20,20,20,0" Style="{StaticResource BudggyHomeTBlock}" 
                            Text="{Binding Description,UpdateSourceTrigger=PropertyChanged}"
                                   TextWrapping="WrapWholeWords"
                                   MaxWidth="400"
                                   RelativePanel.Below="ExpBinSP"
                                   RelativePanel.AlignHorizontalCenterWith="ExpBinSP"/>
                            <Button Name="ExpDeleteBt" Click="ExpDeleteBt_Click"
                                    FontFamily="Segoe MDL2 Assets" Content="&#xE738;"
                                    RelativePanel.AlignRightWithPanel="True"
                                    RelativePanel.AlignVerticalCenterWithPanel="True"/>

                        </RelativePanel>

                        <!--<Ellipse Fill="Red" Width="25" Height="25"/>                        
                        <TextBlock Margin="20,0,0,0" Text="{Binding ValueStr, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource BudggyHomeTBlock}"/>
                        <StackPanel Margin="20,0,20,0">
                            <TextBlock Text="Bin:"/>
                            <TextBlock Text="{Binding Bin, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <TextBlock Name="ExpDateTB" Style="{StaticResource BudggyHomeTBlock}"
                                   Text="{Binding DateStr, UpdateSourceTrigger=PropertyChanged}"/>                        
                        <TextBlock Margin="20,0,0,0" Style="{StaticResource BudggyHomeTBlock}" 
                            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                   TextWrapping="WrapWholeWords"                                   
                                   MaxWidth="400"/> -->
                        
                    
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        </Border>

    

        <RelativePanel Name="BudgetBalRP" Grid.ColumnSpan="2">
            <StackPanel Name="BalanceSP" Background="Purple"  RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Budget Balance for" FontSize="36"/>
                    <TextBlock Name="BudgetMonthTB"  FontSize="36"
                               Margin="10,0,10,0"
                               Text="{Binding MonthStr,  UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Name="BudgetYearTB" FontSize="36"
                               Text="{Binding YearInt, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Name="BudgetsignTB" FontSize="48" Text="+"/>
                    <TextBlock Name="BudgetTB" FontSize="48" 
                           Text="{Binding ValString, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>             

            </StackPanel>
            <!-- Monthly income elements -->
            <StackPanel Name="IncSP"
                        RelativePanel.Below="BalanceSP"
                        RelativePanel.AlignRightWith="BalanceSP"
                        RelativePanel.AlignLeftWith="BalanceSP"
                        Background="Green">
                <RelativePanel>
                    <TextBlock Name="IncomeTB" FontSize="36" Text="Income" 
                               RelativePanel.AlignLeftWithPanel="True" />
                    <TextBlock Name="IncomeSignTB" FontSize="36" Text="+" RelativePanel.LeftOf="IncValueTB"/>
                    <TextBlock Name="IncValueTB" FontSize="36" Text="{Binding IncString, UpdateSourceTrigger=PropertyChanged}"
                               RelativePanel.AlignRightWithPanel="True"/>
                </RelativePanel>
            </StackPanel>

            <!-- Monthly expense elements-->
            <StackPanel Name="ExpSP"
                        RelativePanel.Below="IncSP"
                        RelativePanel.AlignRightWith="IncSP"
                        RelativePanel.AlignLeftWith="IncSP"
                        Background="Red">
                <RelativePanel>
                    <TextBlock FontSize="36" Text="Expense"
                               RelativePanel.AlignLeftWithPanel="True"/>
                    <TextBlock FontSize="36" Text="-"
                               RelativePanel.LeftOf="ExpValueTB"/>
                    <TextBlock Name="ExpValueTB" FontSize="36" Text="{Binding ExpString, UpdateSourceTrigger=PropertyChanged}"
                                RelativePanel.AlignRightWithPanel="True"/>
                </RelativePanel>
            </StackPanel>
        </RelativePanel>
        
        <!--
        <!<Rectangle Grid.Row="1" Grid.ColumnSpan="3" Fill="Green"/> 
        <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="Blue"/>
       <! <Rectangle Grid.Row="2" Grid.ColumnSpan="3" Fill="Red"/> -->
    </Grid>
</Page>
