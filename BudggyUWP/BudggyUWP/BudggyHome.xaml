<Page
    x:Class="BudggyUWP.BudggyHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BudggyUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <!--<ColumnDefinition Width="2*"/> -->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <RelativePanel Grid.Row="1" Grid.ColumnSpan="3">
            <StackPanel Grid.Row="1" Grid.ColumnSpan="3"
                        
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                    Orientation="Horizontal">
                <ComboBox x:Name="BinsCB" Width="200"
                          Margin="0,0,20,0">                    
                    <ComboBox.ItemTemplate>
                        <DataTemplate  >
                            <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                          
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:Name="IncExpCB" Width="100
                          "  >
                    <ComboBoxItem Content="Income"/>
                    <ComboBoxItem Content="Expense"/>
                </ComboBox>
                <TextBox PlaceholderText="Description"
                         Name="DescriptionTB" Width="300"/>
                <TextBox Name="ValueTB" PlaceholderText="Value"                          
                         KeyDown="ValueTB_KeyDown"
                         KeyUp="ValueTB_KeyUp"                         
                         Width="100" Margin="20,0,0,0"/>
                <CalendarDatePicker Name="HomeCDP"
                                    Margin="20,0,0,0"/>
                <Button Name="AddButton" Content="Add" 
                        Margin="20,0,0,0"
                        Click="AddButton_Click"/>

            </StackPanel>            
        </RelativePanel>
        
        
        <!--
        <!<Rectangle Grid.Row="1" Grid.ColumnSpan="3" Fill="Green"/> -->
        <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="Blue"/>
        <Rectangle Grid.Row="2" Grid.ColumnSpan="3" Fill="Red"/>
    </Grid>
</Page>
